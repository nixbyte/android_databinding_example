<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <!--We will be using the toolbar so no need to show ActionBar-->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!--Цвет бэкграунда в тул баре-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--Цвет бэкграунда в статус баре-->
        <item name="colorAccent">@color/colorAccent</item> <!--Цвет текста-->
        <item name="android:colorBackground">@color/colorAccent</item>

        <item name="actionOverflowMenuStyle">@style/MyOptionsMenu</item>
        <item name="android:actionOverflowMenuStyle">@style/MyOptionsMenu</item>

        <item name="actionBarPopupTheme">@style/HardwareOptionMenu</item>

        <item name="android:listViewStyle">@style/MyListView</item>

    </style>

    <style name="MyActionBar" parent="MyTheme">
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item> <!--Цвет текста меню которое alway show in action bar-->
        <item name="actionMenuTextColor">@color/colorAccent</item> <!--Цвет текста меню которое alway show in action bar-->

        <item name="android:textColor">@color/colorAccent</item> <!--Цвет текста в меню трех кружков если он не установлен то будет цвет заголовка-->
        <item name="android:textColorPrimary">@color/colorAccent</item> <!--Цвет заголовка и текста в меню трех кружков-->
        <item name="android:textColorSecondary">@color/colorAccent</item> <!--Цвет кружков меню и текста в меню в хард кнопке -->
    </style>

    <style name="MyListView" parent="Widget.AppCompat.ListView">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="MyOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="HardwareOptionMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

</resources>
